{
  "manifest_version": 3,
  "name": "Danny Is...",
  "description": "Create notes for danny.is.",
  "version": "1.1",
  "permissions": [
    "sidePanel",
    "scripting",
    "nativeMessaging",
    "storage",
    "tabs"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_title": "Create Note"
  },
  "background": {
    "service_worker": "background.js"
  }
}
